    '2024-03-11', '12:30:45', '2024-03-11 12:30:45.123456'
),
(
    2, -250, -9223372036854775808, 98765.43, 56.78, 987654.321, 
    'FixedString2', 'Variable String Example 2', 'This is a large text data 2.', NULL, 
    '2025-05-20', '18:45:30', '2025-05-20 18:45:30.654321'
