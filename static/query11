CREATE TABLE DataTypeTest (
    -- Numeric Data Types
    Id INT PRIMARY KEY,
    SmallNum SMALLINT,
    BigNum BIGINT,
    DecimalNum DECIMAL(10,2),
    RealNum REAL,
    DoubleNum DOUBLE,

    -- Character and String Data Types
    FixedText CHAR(50),
    VarText VARCHAR(255),
    LargeText CLOB,

    -- Binary Data Types
    BinaryData BLOB,

    -- Date and Time Data Types
    BirthDate DATE,
    EventTime TIME,
    FullTimestamp TIMESTAMP
);


INSERT INTO DataTypeTest (
    Id, SmallNum, BigNum, DecimalNum, RealNum, DoubleNum, 
    FixedText, VarText, LargeText, BinaryData, 
    BirthDate, EventTime, FullTimestamp
) VALUES 
